<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="Header" parent="android:style/Widget.Holo.TextView">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/header_black</item>
        <item name="android:textSize" tools:ignore="SpUsage">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DefinitionHeaderSeparator" parent="android:Widget.Holo.TextView">
        <item name="android:background">@color/definition_header_separator_black</item>
        
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

</resources>
